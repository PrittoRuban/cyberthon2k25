{
  "manifest_version": 3,
  "name": "CyberSec Extension",
  "version": "1.0",
  "description": "Real-time threat detection for phishing and deepfake media.",
  "permissions": ["activeTab", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/index.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
